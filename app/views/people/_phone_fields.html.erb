<div class="phone nested-fields">
  <div class='row'>
    <%= f.input :number, wrapper_html: { class: 'col-md-3' }, input_html: { class: 'phone_mask' }  %> 
    <%= f.association :phone_type, collection: PhoneType.order(:name), wrapper_html: { class: 'col-md-3' }  %>
    <div class="col-md-2">
      <%= link_to_remove_association f, class: 'btn btn-danger top-32' do %>
        <i class="fa fa-fw fa-times"></i>
      <% end %>
    </div>
  </div>
</div>
